@inherits Umbraco.Web.Mvc.UmbracoViewPage<SearchContentModel>
@using Searching.Site.Models;
@using Searching.Site.Models.ViewModels

@{
    Layout = "master.cshtml";
}

@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

<section class="section">

    <div class="container">

        <div class="col-md-3">
            <nav class="nav-bar nav-bar--list">
                @Html.Partial("~/Views/Partials/Navigation/SubNavigation.cshtml")
            </nav>
        </div>

        <div class="col-md-9">
            @Html.Partial("Partials/SearchForm", Model.SearchViewModel)

            <p>Your search for <strong>@Model.SearchViewModel.Query</strong> returned these results:</p>

            @if(Model.SearchResults != null && Model.SearchResults.Any())
            {
                foreach(var item in Model.SearchResults)
                {
                    <p><a href="@item.Url()">@item.Name</a></p>
                }
            }
        </div>
    </div>

</section>